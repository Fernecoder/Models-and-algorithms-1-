#include <SFML/Window.hpp>
#include <SFML/Graphics.hpp>

using namespace sf;

int main() {
	//--primeras plataformas--
	int qcolumna = 7;
	int qfila = 80;
	Texture tplataforma, tplataforma2;
	tplataforma.loadFromFile("plataforma.jpg");
	tplataforma2.loadFromFile("plataforma.jpg");
	Sprite splataforma, splataforma2;
	splataforma.setTexture(tplataforma);
	splataforma2.setTexture(tplataforma2);
	//--escala y posicion de la plataforma horizontal--
	splataforma2.setScale(sf::Vector2f(0.70, 0.2));
	splataforma2.setPosition(600, 200);
	sf::RenderWindow App(sf::VideoMode(800, 600, 32), "Ventana ejercicio 4 plataformas");
	while (App.isOpen()) {
		App.clear();
		for (int columna = 0; columna < qcolumna; columna++) {
			if (columna<qcolumna) {
				splataforma.setPosition(columna * qfila, 550);
				splataforma.setScale(0.25, columna * (-0.2));
				App.draw(splataforma);
			}
		}
		App.draw(splataforma2);
		App.display();
	}
	return 0;
}
