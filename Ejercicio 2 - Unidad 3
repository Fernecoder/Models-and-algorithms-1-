#include <SFML/Window.hpp>
#include <SFML/Graphics.hpp>

using namespace sf;


int main() {

	Texture tblancas;
	tblancas.loadFromFile("chessw.png");
	Sprite sblancas;
	sblancas.setTexture(tblancas);
	Texture tnegras;
	tnegras.loadFromFile("chessb.png");
	Sprite snegras;
	snegras.setTexture(tnegras);
	//tama√±o tabla
	int tamTabla = 8;
	int tamCasilla = 100;
	//dibujamos tablero
	sf::RenderWindow App(sf::VideoMode(800, 800, 32), "Ventana ejercicio 2 TABLA AJEDREZ");
	//bucle
	while (App.isOpen()) {
		App.clear();
		for (int fila = 0; fila < tamTabla; fila++) {
			for (int col = 0; col < tamTabla; col++) {
				if ((fila + col) % 2 == 0) {
					sblancas.setPosition(col * tamCasilla, fila * tamCasilla);
					App.draw(sblancas);
				}
				else {
					snegras.setPosition(col * tamCasilla, fila * tamCasilla);
					App.draw(snegras);
				}
			}
		}
		App.display();
	}
	return 0;
	
}
