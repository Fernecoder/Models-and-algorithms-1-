//////Bibliotecas//////
#include <SFML/Window.hpp>
#include <SFML/Graphics.hpp>

using namespace sf;


//Practica 3
//Ejercicio 1

//Variables
Texture texture1, texture2, texture3, texture4;
Sprite sprite1, sprite2, sprite3, sprite4;


int main() {
	texture1.loadFromFile("rcircle.png");
	sprite1.setTexture(texture1);
	texture2.loadFromFile("rcircle.png");
	sprite2.setTexture(texture2);
	texture3.loadFromFile("rcircle.png");
	sprite3.setTexture(texture3);
	texture4.loadFromFile("rcircle.png");
	sprite4.setTexture(texture4);
	sf::RenderWindow App(sf::VideoMode(800, 600, 32), "Ventana ejercicio 1");
	sprite1.setPosition(0, 0);
	sprite2.setPosition(650, 0);
	sprite3.setPosition(0, 450);
	sprite4.setPosition(650, 450);
	while (App.isOpen()) {
		App.clear();
		App.draw(sprite1);
		App.draw(sprite2);
		App.draw(sprite3);
		App.draw(sprite4);
		App.display();
	}
	return 0;
}
