#include <SFML/Window.hpp>
#include <SFML/Graphics.hpp>

using namespace sf;

int main() {
	//--Variables de escala
	float escalaX, escalaY;
	float altorojo, anchorojo;
	float altoamari, anchoamari;
	float altoazu, anchoazu;
	float altoneg, anchoneg;

	Texture tfondoRo, tfondoAm, tfondoAz, tfondoNe;
	tfondoRo.loadFromFile("cuad_red.png");
	tfondoAm.loadFromFile("cuad_yellow.png");
	tfondoAz.loadFromFile("cuad_blue.png");
	tfondoNe.loadFromFile("cuad_grey.png");
	Sprite sfondoRo, sfondoAm, sfondoAz, sfondoNe;
	sfondoRo.setTexture(tfondoRo);
	sfondoAm.setTexture(tfondoAm);
	sfondoAz.setTexture(tfondoAz);
	sfondoNe.setTexture(tfondoNe);
	//--Seteamos posiciones
	sfondoRo.setPosition(0, 0); 
	sfondoAm.setPosition(0, 500);
	sfondoAz.setPosition(500, 0);
	sfondoNe.setPosition(500, 500);

	altoamari = (float)tfondoAm.getSize().y;
	altorojo = (float)tfondoRo.getSize().y;
	anchoamari = (float)tfondoAm.getSize().x;
	anchorojo = (float)tfondoRo.getSize().x;
	escalaY = altorojo / altoamari; escalaX =
		anchorojo / anchoamari;
	sfondoAm.setScale(escalaX, escalaY);


	sf::RenderWindow App(sf::VideoMode(800, 800, 32), "Ventana ejercicio 6 CUADRADOS");
	while (App.isOpen()) {
		App.clear();
		App.draw(sfondoRo);
		App.draw(sfondoAm);
		//App.draw(sfondoAz);
		//App.draw(sfondoNe);
		App.display();
	}
	return 0;
}
